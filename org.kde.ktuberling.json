            "builddir": true,
            "sources": [ 
                { 
                    "type": "archive", 
                    "url": "https://download.kde.org/stable/release-service/20.04.2/src/ktuberling-20.04.2.tar.xz",
                    "sha256": "86046f6b830370695ea9759e9eaa8ed148df270b8ba9803f926a8510012bdc9d"
