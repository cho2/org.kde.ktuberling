            "builddir": true,
            "sources": [ 
                { 
                    "type": "archive", 
                    "url": "https://download.kde.org/stable/release-service/20.08.2/src/ktuberling-20.08.2.tar.xz",
                    "sha256": "f9e4a0de3b92d015f8e7b862badf4bbf11b3ce2727aa607384a009247e7b7fad"
