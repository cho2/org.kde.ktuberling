{
    "id": "org.kde.ktuberling",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.12",
    "sdk": "org.kde.Sdk",
    "command": "ktuberling",
    "rename-icon": "ktuberling",
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--device=dri",
        "--filesystem=xdg-config/kdeglobals:ro"
    ],
    "modules": [
        {
            "name": "libkdegames",
            "buildsystem": "cmake-ninja",
            "config-opts": ["-DCMAKE_INSTALL_LIBDIR=lib"],
            "sources": [ 
                { 
                    "type": "archive", 
                    "url": "https://download.kde.org/stable/applications/18.12.2/src/libkdegames-18.12.2.tar.xz",
                    "sha256": "ec20e57eeeab9a8ee7737d0c7c8c5d6c84e060393d96a37372368d7f1a9e5843"
                } 
            ]
        },
        {
            "name": "kdelibs4support",
            "buildsystem": "cmake-ninja",
            "config-opts": ["-DCMAKE_BUILD_TYPE=RelWithDebInfo", "-DCMAKE_INSTALL_LIBDIR=lib"],
            "sources": [ 
                { 
                    "type": "archive", 
                    "url": "https://download.kde.org/stable/frameworks/5.54/portingAids/kdelibs4support-5.54.0.tar.xz",
                    "sha256": "b541c0c135f9f561a194d793924e699c5d79729687529789bb84522d99a3730a"
                } 
            ]
        },
        {
            "name": "ktuberling",
            "buildsystem": "cmake-ninja",
            "config-opts": ["-DCMAKE_BUILD_TYPE=RelWithDebInfo"],
            "builddir": true,
            "sources": [ 
                { 
                    "type": "archive", 
                    "url": "https://download.kde.org/stable/applications/18.12.2/src/ktuberling-18.12.2.tar.xz",
                    "sha256": "efd0dd890ee03f9ba8b9355530760e44d4d85b63fff3ef76d21670234bc9c840"
                }
            ]
        }
    ]
}
